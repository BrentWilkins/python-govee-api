    "version": "0.2.0",
    "configurations": [
        {
            "name": "run govee-api ping",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/govee-api",
            "program": "./govee-api.py",
            "args": ["ping"],
            "console": "integratedTerminal"
        },{
            "name": "run govee-api devices <api-key>",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/govee-api",
            "program": "./govee-api.py",
            "args": ["devices", "<your-api-key>"],
            "console": "integratedTerminal"
        },{
            "name": "create distribution package",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "./setup.py",
            "args": ["sdist", "bdist_wheel"],
            "console": "integratedTerminal"
        }
    ]
}